<c:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout"
    xmlns:c="sap.ui.core">
    <List width="100%" growing="true" class="listaMateriali" growingScrollToLoad="true" items="{ path: 'modelloDati>/Dati'}">
        <CustomListItem>
            <HBox class="listContainer" alignItems="Start" width="auto" height="auto" justifyContent="SpaceAround">
                <VBox width="100%" height="auto" renderType="Bare">

                    <l:Grid class="sapUiTinyMarginTop sapUiNoContentPadding fullWidth gridNoMargin" defaultSpan="L6 M6 S6">
                        <HBox alignItems="Start" fitContainer="true" renderType="Bare" class="fullWidth paddingRight05rem" wrap="Wrap">
                            <Label text="Materiale: "/>
                            <Text class="sapUiTinyMarginBegin" text="{modelloDati>Materiale}"/>
                        </HBox>
                        <HBox alignItems="Start" fitContainer="true" renderType="Bare" class="fullWidth paddingRight05rem" wrap="Wrap">

                            <Text class="sapUiTinyMarginBegin" text="{modelloDati>Descrizione}"/>
                        </HBox>
                    </l:Grid>
                    <!-- <l:Grid class="sapUiTinyMarginTop sapUiNoContentPadding fullWidth gridNoMargin" defaultSpan="L6 M6 S6">
                        <HBox alignItems="Start" fitContainer="true" renderType="Bare" class="fullWidth paddingRight05rem" wrap="Wrap">
                            <Label text="Magazzino"/>
                            <Text class="sapUiTinyMarginBegin" text="{modelloDati>Magazzino}"/>
                        </HBox>
                        <HBox fitContainer="true" renderType="Bare" class="fullWidth paddingLeft05rem" wrap="Wrap">
                            <Label text="Divisione"/>
                            <Text class="sapUiTinyMarginBegin" text="{modelloDati>Divisione}"/>
                        </HBox>
                    </l:Grid> -->
                    <l:Grid class="sapUiTinyMarginTop sapUiNoContentPadding fullWidth gridNoMargin" defaultSpan="L6 M6 S6">
                        <HBox alignItems="Start" fitContainer="true" renderType="Bare" class="fullWidth paddingRight05rem" wrap="Wrap">
                            <Label text="Tipo Valorizz."/>
                            <Text class="sapUiTinyMarginBegin" text="{modelloDati>Tipo}"/>
                        </HBox>
                        <HBox fitContainer="true" renderType="Bare" class="fullWidth paddingLeft05rem" wrap="Wrap">
                            <Label text="Numero di serie"/>
                            <Text class="sapUiTinyMarginBegin" text="{modelloDati>Numero_Serie}"/>
                        </HBox>
                    </l:Grid>
                    <l:Grid class="sapUiTinyMarginTop sapUiNoContentPadding fullWidth gridNoMargin" defaultSpan="L6 M6 S6">
                        <HBox class="sapUiTinyMarginTop" renderType="Bare" wrap="Wrap">
                            <Label text="Quantità "/>
                            <Text class="sapUiTinyMarginBegin" text="{modelloDati>Quantità} {modelloDati>Misura}" maxLines="1" wrapping="false" />
                        </HBox>
                        <HBox fitContainer="true" renderType="Bare" class="fullWidth paddingLeft05rem" wrap="Wrap">
                            <Label text="Q.tà prelevata"/>
                            <Text class="sapUiTinyMarginBegin" text="{modelloDati>prelevata}"/>
                        </HBox>
                    </l:Grid>

                    <!-- <HBox class="sapUiTinyMarginTop" renderType="Bare" wrap="Wrap">
                <Label text="Quantità "/>
                <Text class="sapUiTinyMarginBegin" text="{modelloDati>Quantità} {modelloDati>Misura}" maxLines="1" wrapping="false" />
            </HBox> -->

                </VBox>
                <VBox alignItems="Start" class="vBoxButton">

                    <layoutData>
                        <FlexItemData growFactor="0"/>
                    </layoutData>
                </VBox>
            </HBox>
        </CustomListItem>
    </List>
</c:FragmentDefinition>