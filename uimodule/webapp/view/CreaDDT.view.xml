<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="com.sap.build.eeb1117ce-eu_2.untitledPrototype.controller.CreaDDT"
	xmlns="sap.m">
	<Page title="{i18n>}" showNavButton="true" navButtonPress="_onPageMenu" showFooter="false">
		
		<VBox direction="Column" fitContainer="true" height="auto" justifyContent="Start" renderType="Bare" displayInline="false" class="sapUiSmallMarginTopBottom sapUiTinyMarginBeginEnd">
			<Label text="{i18n>labelOrdine}:" design="Bold" width="100%" />
			<Input value="{dataSource>/OrdineDDT}" id="ordineddt" class="fullWidth" submit="cercaOrdine" valueStateText="Invalid entry" maxLength="{config>/maxOrdine}"/>
			<Button text="{i18n>buttonCerca}" width="auto"   press="cercaOrdine" iconDensityAware="false"/>
		</VBox>
		<VBox direction="Column" fitContainer="true" height="auto" justifyContent="Start" renderType="Bare" displayInline="false" class="sapUiSmallMarginTopBottom sapUiTinyMarginBeginEnd">
			<Button text="Selezione Div/Magazzino" width="auto" press="" iconDensityAware="false"/>
		</VBox>
		<footer>
			<OverflowToolbar width="100%" height="46px" >
				<ToolbarSpacer/>
				
			</OverflowToolbar>
		</footer>
		<headerContent>
			<Image src="  ./resources/Logo.png" height="43px" width="80px" densityAware="true"/>
		</headerContent>
	</Page>
</mvc:View>